<style>
h2 {text-align: center;}
.button {
  width: 100%;}
</style>

  <div class="columns">

    <div class="column is-4">
    </div>
    
    <div class="column is-4">
      <h2 class="title is-1 is-family-monospace has-text-primary mt-4">Mi Cuenta</h2>

      <div class="box mb-6" style="width: 100%;">

        <div class="field">
          <h2 class="subtitle has-text-weight-bold mb-0"> <%= "Datos del usuario" %></h2>
          <h3> <%= "Nombre: " + @user.name %> </h3>
          <h3> <%= "Apellido: " + @user.last_name %> </h3>
          <h3> <%= "Email: " + @user.email %> </h3>
          <h3> <%= "Teléfono: " + "#{@user.phone}" %> </h3>
          <h3> <%= "Mis estrellas: " + "#{@user.stars}" %> </h3>
          <h2 class="subtitle has-text-weight-bold mt-3 mb-0"> <%= "Datos del vehículo" %> </h2>
          <h3> <%= "Patente: " + @user.patent %> </h3>
          <h3> <%= "Color auto: " + @user.car_color %> </h3>
          <h3> <%= "Descripción: " + @user.description %> </h3>
        </div>

        <div>
          <p> <%= link_to "Editar Perfil", edit_user_registration_path, :class => "button is-light is-warning" %> </p>
          <p class="mt-3"> <%= link_to "Ver mis reseñas", ratings_path, :class => "button"%> </p>
        </div>


      </div>
    </div>

    <div class="column is-4">
    </div>

  </div>

