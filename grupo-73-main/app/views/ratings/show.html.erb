<style>
p {text-align: center;}
thead {text-align: center;}
h1 {text-align: center;}
.button {width: 90%;}
</style>


<% if current_user %>
  <h1 class="title is-1 is-family-monospace has-text-primary mt-4 ml-6"> Detalle de la reseña </h1>
  
  <div class="box ml-6 mr-6 mb-6">
    <div class="columns">  
      <div class="column is-half">
        <h3><%= "Turno calificado: " + @turno.name %> </h3>
        <h3><%= "Calificando a: " + User.find(@rating.user_id).name %></h3>
        <h3> Calificación: 
          <%if @rating.stars == 1%>
            ★☆☆☆☆
          <%elsif @rating.stars == 2 %>
            ★★☆☆☆ 
          <%elsif @rating.stars == 3 %>
            ★★★☆☆
          <%elsif @rating.stars == 4 %>
            ★★★★☆
          <%elsif @rating.stars == 5 %>
            ★★★★★
          <%end%> </h3>
        <h3> <%= "Reseña: " + "#{@rating.content}" %> </h3>
      </div>

      <div class="column is-half">  
        <p> <%= link_to 'Editar', ratings_edit_path(@rating.id), :class => "button is-warning is-light"%> </p>
        <p class="mt-3"> <%= link_to "Volver", ratings_path , :class => "button is-danger is-light"%> </p>
      </div>

    </div>
  </div>

<% else %>

<h1> Debes iniciar sesión para ver tus reseñas </h1>

<% end %>